html
    head
        meta(name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover")
        title='Pagina Pug'
    body 
         div(class="table-responsive")
                table(class="table table-dark")
                    tr
                        th='Nombre'
                        th='Precio'
                        th='Foto'
                        each product in products
                            tr
                                td=product.name 
                                td=product.price
                                td=product.url 